---
import Card from "../components/Card";
import App from "./App";
import "../styles/global.astro";
const ENV = import.meta.env;

// Obtiene los datos de la API en el servidor antes de renderizar la p√°gina
const response = await fetch(ENV.SERVER + ENV.getStock);
const productData = await response.json();

// Pasar los datos al componente Card
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>DaybarT-Shop</title>
  </head>
</html>
<body>
  <App ENV={ENV} productData={productData} client:load/>
</body>
